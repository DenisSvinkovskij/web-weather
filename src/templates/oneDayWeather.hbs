<section class="weather">
    <div class="weather__container">
        <div class="weather__current">
            <div>
                <h1 class="weather__country">{{location.country}}</h1>
                <p class="weather__day">{{forecast.forecastday.0.date}}</p>
            </div>

            <div class="weather__box">
                <h2 class="weather__location">{{location.name}}</h2>
                <p class="weather__region">{{location.region}}</p>
                <div class="weather__visualization">
                    <p class="weather__temperature">{{current.temp_c}}°</p>
                    <img class="weather__icon" src={{current.condition.icon}} alt="Погода в Украине">
                </div>
            </div>
        </div>

        <ul class="weather__description">
            <li class="weather__item">
                <img class="weather__icons"
                    src="data:image/svg+xml;base64," />
                {{!-- <img src="" alt="Опади" class="weather__icon-precipitation"> --}}
                <p class="weather__text">{{current.precip_mm}} мм</p>
            </li>
            <li class="weather__item">
                <img class="weather__icons"
                    src="data:image/svg+xml;base64," />
                {{!-- <img src="" alt="Швидкість вітру" class="weather__icon-wind"> --}}
                <p class="weather__text">{{current.wind_kph}} км/ч</p>
            </li>
            <li class="weather__item">
                <img class="weather__icons"
                    src="data:image/svg+xml;base64," />
                {{!-- <img src="" alt="Напрямок вітру" class="weather__icon-direction"> --}}
                <p class="weather__text">{{current.wind_dir}}</p>
            </li>
        </ul>
    </div>
</section>